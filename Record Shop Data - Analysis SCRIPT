-- Provide a query that shows all the Tracks, and include the Album name, Media type, and Genre.

-- Show the total sales made by each sales agent.
SELECT ROUND(sum(inv.Total),2) AS TotalSalesMade, 
CASE WHEN emp.EmployeeId = 3 THEN 'Jane Peacock'
WHEN emp.EmployeeId = 4 THEN 'Margaret Park'
WHEN emp.EmployeeId = 5 THEN 'Steve Johnson'
ELSE '-'
END AS SalesAgent

FROM chinook.invoices inv
JOIN chinook.customers cust ON cust.CustomerId = inv.CustomerId
JOIN chinook.employees emp ON emp.EmployeeId = cust.SupportRepId
GROUP BY SalesAgent


SELECT *
FROM chinook.invoices

SELECT *
FROM chinook.customers

SELECT *
FROM chinook.employees

-- Which sales agent made the most dollars in sales in 2009?
SELECT ROUND(sum(inv.Total),2) AS TotalSalesMade, 
CASE WHEN emp.EmployeeId = 3 THEN 'Jane Peacock'
WHEN emp.EmployeeId = 4 THEN 'Margaret Park'
WHEN emp.EmployeeId = 5 THEN 'Steve Johnson'
ELSE '-'
END AS SalesAgent
FROM chinook.invoices inv
JOIN chinook.customers cust ON cust.CustomerId = inv.CustomerId
JOIN chinook.employees emp ON emp.EmployeeId = cust.SupportRepId
GROUP BY SalesAgent
WHERE inv.InvoiceDate like '2009%'
ORDER BY TotalSalesMade desc LIMIT 1;